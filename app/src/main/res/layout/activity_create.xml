<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondLevel.CreateActivity">

    <include
        android:id="@+id/toolbarHelper"
        layout="@layout/layout_toolbar" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/group_name"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rec_input"
        app:layout_constraintBottom_toTopOf="@id/group_hobby"
        app:layout_constraintTop_toBottomOf="@id/toolbarHelper">

        <android.support.design.widget.TextInputEditText
            android:layout_marginLeft="10dp"
            android:id="@+id/group_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="群名称" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/group_hobby"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/rec_input"
        app:layout_constraintBottom_toTopOf="@id/group_descript"
        app:layout_constraintTop_toBottomOf="@id/group_name">

        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="群爱好" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/group_descript"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/rec_input"
        app:layout_constraintBottom_toTopOf="@id/button_create"
        app:layout_constraintTop_toBottomOf="@id/group_hobby">

        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="群描述" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="16dp"
        android:text="创建"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rec_button_create"
        app:layout_constraintLeft_toLeftOf="@id/group_descript"
        app:layout_constraintRight_toRightOf="@id/group_descript"
        app:layout_constraintTop_toBottomOf="@id/group_descript" />

</android.support.constraint.ConstraintLayout>